Weekday_weekend <- function(date) {
dayoftheweek <- weekdays(date)
if (dayoftheweek %in% c("Monday", "Tuesday", "Wednesday", "Thursday", "Friday"))
return("weekday")
else if (dayoftheweek %in% c("Saturday", "Sunday"))
return("weekend")
else
stop("date is not valid")
}
